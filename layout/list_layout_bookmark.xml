<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="#heading"
            android:textColor="#0C0C0C"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="description"
            android:layout_below="@id/textViewheading"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewSource"
            android:layout_below="@id/textViewdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http:gehfiejfke.com"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textVewAuthorname"
            android:layout_width="match_parent"
            android:layout_below="@id/textViewSource"
            android:layout_height="wrap_content"
            android:text="MR.Kunal Chopra"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/textViewAuthoremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            android:layout_below="@id/textVewAuthorname"
            android:text="xyz@gmail.com" />

        <TextView
            android:id="@+id/textViewtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            android:layout_below="@id/textViewAuthoremail"
            android:text="time of post" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewtime"
            android:background="@color/colorAccent"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </RelativeLayout>


</LinearLayout>