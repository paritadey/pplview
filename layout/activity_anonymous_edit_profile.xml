<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    tools:context="com.example.parita.pplview.AnonymousEditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            app:srcCompat="@drawable/anonymous" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Profile "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/anoname"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="Name" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewName"
            android:layout_alignStart="@+id/textViewName"
            android:layout_below="@+id/textViewName"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="Gender" />

        <Spinner
            android:id="@+id/usergender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewgender"
            android:layout_alignStart="@+id/textViewgender"
            android:layout_below="@+id/textViewgender"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="number"
            android:text="Gender"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usergender"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="Address" />

        <EditText
            android:id="@+id/useraddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewAddress"
            android:layout_alignStart="@+id/textViewAddress"
            android:layout_below="@+id/textViewAddress"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:maxLength="30"
            android:singleLine="false"
            android:text="Address"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewdateofbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useraddress"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="Date of Birth" />

        <EditText
            android:id="@+id/userdateofbirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewdateofbirth"
            android:layout_alignStart="@+id/textViewdateofbirth"
            android:layout_below="@+id/textViewdateofbirth"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="Date of birth"
            android:textColor="#000000"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/textViewedudetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userdateofbirth"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Education Details" />

        <Spinner
            android:id="@+id/education_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewedudetails"

            android:layout_alignStart="@+id/textViewedudetails"
            android:layout_below="@+id/textViewedudetails"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/appuserid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/education_details"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="14dp"
            android:text="app user id" />
    </RelativeLayout>
</ScrollView>
