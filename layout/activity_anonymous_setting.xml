<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="20dp"
    tools:context="com.example.parita.pplview.AnonymousSetting">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language"
        android:id="@+id/tvlanguage"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English(Default)"
        android:layout_marginTop="5dp"
        android:id="@+id/language"
        android:layout_below="@+id/tvlanguage"
        android:paddingLeft="10dp"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="Location"/>
    <TextView
        android:id="@+id/txtCoordinates"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:text="India"
        android:layout_marginTop="5dp"
        android:layout_below="@id/location"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/txtCoordinates"
        android:layout_marginTop="20dp"
        android:id="@+id/settings"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="General Settings"/>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Edit Profile"
            android:id="@+id/editprofile"
            android:background="#EBE7E6"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/editprofile"
            android:layout_marginTop="20dp"
            android:text="Change Password"
            android:id="@+id/editpassword"
            android:background="#EBE7E6"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/anoname"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
